<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewCreateMedicine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    tools:context=".ui.fragments.CreateMedicineFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/titleMedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Lembrete"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nome -->
        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do medicamento"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleMedicine"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ex.: Dipirona 500mg"
            android:inputType="textCapWords"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dosagem -->
        <TextView
            android:id="@+id/labelDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosagem"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/editName"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editDosage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ex.: 1 comprimido"
            android:inputType="text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelDosage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dias da semana -->
        <TextView
            android:id="@+id/labelDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dias da semana"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/editDosage"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Domingo -->
        <CheckBox
            android:id="@+id/radioButtonSunday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/bg_radio_day"
            android:button="@null"
            android:gravity="center"
            android:text="D"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/labelDays"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/radioButtonMonday"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_chainStyle="packed" />

        <!-- Segunda -->
        <CheckBox
            android:id="@+id/radioButtonMonday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/bg_radio_day"
            android:button="@null"
            android:gravity="center"
            android:text="S"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/radioButtonSunday"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonSunday"
            app:layout_constraintStart_toEndOf="@id/radioButtonSunday"
            app:layout_constraintEnd_toStartOf="@id/radioButtonTuesday"
            app:layout_constraintDimensionRatio="1:1" />

        <!-- Terça -->
        <CheckBox
            android:id="@+id/radioButtonTuesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/bg_radio_day"
            android:button="@null"
            android:gravity="center"
            android:text="T"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/radioButtonSunday"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonSunday"
            app:layout_constraintStart_toEndOf="@id/radioButtonMonday"
            app:layout_constraintEnd_toStartOf="@id/radioButtonWednesday"
            app:layout_constraintDimensionRatio="1:1" />

        <!-- Quarta -->
        <CheckBox
            android:id="@+id/radioButtonWednesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/bg_radio_day"
            android:button="@null"
            android:gravity="center"
            android:text="Q"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/radioButtonSunday"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonSunday"
            app:layout_constraintStart_toEndOf="@id/radioButtonTuesday"
            app:layout_constraintEnd_toStartOf="@id/radioButtonThursday"
            app:layout_constraintDimensionRatio="1:1" />

        <!-- Quinta -->
        <CheckBox
            android:id="@+id/radioButtonThursday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/bg_radio_day"
            android:button="@null"
            android:gravity="center"
            android:text="Q"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/radioButtonSunday"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonSunday"
            app:layout_constraintStart_toEndOf="@id/radioButtonWednesday"
            app:layout_constraintEnd_toStartOf="@id/radioButtonFriday"
            app:layout_constraintDimensionRatio="1:1" />

        <!-- Sexta -->
        <CheckBox
            android:id="@+id/radioButtonFriday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/bg_radio_day"
            android:button="@null"
            android:gravity="center"
            android:text="S"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/radioButtonSunday"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonSunday"
            app:layout_constraintStart_toEndOf="@id/radioButtonThursday"
            app:layout_constraintEnd_toStartOf="@id/radioButtonSaturday"
            app:layout_constraintDimensionRatio="1:1" />

        <!-- Sábado -->
        <CheckBox
            android:id="@+id/radioButtonSaturday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_radio_day"
            android:button="@null"
            android:gravity="center"
            android:text="S"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/radioButtonSunday"
            app:layout_constraintBottom_toBottomOf="@id/radioButtonSunday"
            app:layout_constraintStart_toEndOf="@id/radioButtonFriday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1" />

        <!-- Horários -->
        <TextView
            android:id="@+id/labelTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horários do dia"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/radioButtonSunday"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listTimes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelTimes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Layout para novo horário -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newTimeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/listTimes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layerType="hardware"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnSaveTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Salvar horário"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/timePicker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Botão adicionar horário -->
        <Button
            android:id="@+id/newTimeButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+ Horário"
            android:textColor="@color/primary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/newTimeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão salvar lembrete -->
        <Button
            android:id="@+id/saveMedicineButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Salvar Lembrete"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/newTimeButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
