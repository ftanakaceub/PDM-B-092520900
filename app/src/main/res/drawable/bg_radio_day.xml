<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado: Selecionado (Fundo preenchido, cor sólida) -->
    <item android:state_checked="true">
        <shape android:shape="oval"> <!-- Ou "rectangle" se preferir quadrado -->
            <solid android:color="@color/primary" /> <!-- Use sua cor de destaque -->
            <stroke android:width="1dp" android:color="@color/primary" />
            <size android:width="32dp" android:height="32dp"/>
        </shape>
    </item>

    <!-- Estado: Não Selecionado (Apenas borda ou transparente) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#808080" /> <!-- Cor cinza para borda -->
            <size android:width="32dp" android:height="32dp"/>
        </shape>
    </item>
</selector>